<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <!-- Header -->
    <header class="navbar">
        <h1 class="logo">BloggPost</h1>
        <nav>
            <a href="http://localhost:3000/myblog/new" class="nav-link">Create Post</a>
            <a href="http://localhost:3000/myblog/logout" class="nav-link logout">Logout</a>
        </nav>
    </header>
    
    <br>
    <section class="user-info">
        <!-- <p>Welcome, <strong>Guest</strong>!</p>  -->
        <p>Welcome, <strong>Guest</strong>!</p>
    </section>


    <!-- Blog Posts Section -->
    <section class="blog-container">
        <% for(let post of posts) {%>
            
    <div class="blog-post">
            <img src="<%= post.img %>" alt="Post Image">
            <h2><%= post.title %></h2>
            <p class="post-content">
                <%= post.content.substring(0, 100) %>
                <span class="full-content" style="display: none;"><%= post.content.substring(100) %></span>
            </p>
            <a href="#" class="read-more">Read More</a>

            <div class="post-actions">

                <!-- Edit Post Form -->
                <form action="/myblog/edit/<%= post.id %>" method="get">
                    <button type="submit" class="edit-btn">Edit</button>
                </form>

                &nbsp;&nbsp;&nbsp;

                <!-- Delete Post Form -->
                <form action="/myblog/delete/<%= post.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this post?')">
                    <button type="submit" class="delete-btn">Delete</button>
                </form>
            </div>
            </div>

    </div>
        
        <% } %>

    </section>



    <footer class="footer">
        <div class="footer-bottom">
            <strong>Made by Siddharth Kakoti âœ¨</strong> 
        </div>
    </footer>
    


    <script src="script.js"></script>
</body>
</html>

















